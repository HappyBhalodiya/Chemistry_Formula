<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lgreen</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="mediumTextView" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>


    <style name="Deshboard" parent="Base.CardView">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:layout_weight">2</item>
        <item name="cardElevation">3dp</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="android:padding">5dp</item>


    </style>
    <style name="splash" parent="Theme.Design.Light.NoActionBar"></style>


    <style name="dashboard_btn" parent="Base.Widget.AppCompat.Button">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/border_click</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        </style>



</resources>
